Object subclass: #TemperatureConverter	instanceVariableNames: 'celsius'	classVariableNames: ''	poolDictionaries: ''	category: 'TemperatureConverter-Core'!!TemperatureConverter commentStamp: 'AF 3/16/2013 17:58' prior: 0!Homework 15/03/2013: TemperatureConverter class!!TemperatureConverter methodsFor: 'printing' stamp: 'AF 3/16/2013 18:27'!toCelsius	"Getter for Celsius degrees (default reference value)"	^ celsius.! !!TemperatureConverter methodsFor: 'printing' stamp: 'AF 3/16/2013 18:32'!toFahrenheit	"Getter for Fahrenheit degrees"	^ celsius * 9.0 / 5.0 + 32.0.! !!TemperatureConverter methodsFor: 'printing' stamp: 'AF 3/16/2013 18:22'!toKelvin	"Getter for Kelvin degrees"	^ celsius + 273.15.! !!TemperatureConverter methodsFor: 'accessing' stamp: 'AF 3/16/2013 18:21'!celsius: aTemperatureNumber	"Setter for Celsius degrees (default reference value)"	celsius := aTemperatureNumber.	^ celsius.! !!TemperatureConverter methodsFor: 'accessing' stamp: 'AF 3/16/2013 18:35'!fahrenheit: aTemperatureNumber	"Setter for Fahrenheit degrees. Returns aTemperatureNumber own value"	celsius := aTemperatureNumber - 32.0 * 5.0 / 9.0.	^ aTemperatureNumber.! !!TemperatureConverter methodsFor: 'accessing' stamp: 'AF 3/16/2013 18:37'!kelvin: aTemperatureNumber	"Setter for Kelvin degrees. Returns aTemperatureNumber own value"	celsius := aTemperatureNumber - 273.15.	^ aTemperatureNumber.! !